{
  "name": "typometer",
  "private": true,
  "prettier": "@marcbouchenoire/prettier-config",
  "nano-staged": {
    "*.{json,md,yml}": [
      "pnpm prettier"
    ],
    "packages/typometer/**/*.mjs": [
      "pnpm --filter typometer eslint --fix",
      "pnpm --filter typometer prettier"
    ],
    "packages/typometer/**/*.{ts,tsx}": [
      "pnpm --filter typometer eslint --fix",
      "pnpm --filter typometer tsatsiki --project tsconfig.json",
      "pnpm --filter typometer prettier"
    ],
    "packages/typometer/**/*.{json,md}": [
      "pnpm --filter typometer prettier"
    ],
    "packages/site/**/*.{cjs,mjs}": [
      "pnpm --filter site eslint --fix",
      "pnpm --filter site prettier"
    ],
    "packages/site/**/*.{ts,tsx}": [
      "pnpm --filter site eslint --fix",
      "pnpm --filter site tsatsiki --project tsconfig.json next-env.d.ts declarations.d.ts",
      "pnpm --filter site prettier"
    ],
    "packages/site/**/*.css": [
      "pnpm --filter site stylelint --fix",
      "pnpm --filter site prettier"
    ],
    "packages/site/**/*.{json,md}": [
      "pnpm --filter site prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "nano-staged"
    }
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "site:dev": "pnpm --filter site dev",
    "site:build": "pnpm --filter site build",
    "site:publish": "pnpm build && pnpm site:build",
    "prettier": "prettier --write --loglevel silent --ignore-path .gitignore",
    "build": "pnpm --filter typometer build",
    "test": "pnpm --filter typometer test",
    "test:coverage": "pnpm --filter typometer test:coverage",
    "lint": "pnpm prettier '*.{json,md,yml}' && pnpm --recursive --parallel --if-present lint",
    "change": "pnpm changeset",
    "bump": "pnpm changeset version && pnpm install",
    "release": "pnpm test && pnpm publish -r"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@marcbouchenoire/eslint-config": "^2.8.1",
    "@marcbouchenoire/prettier-config": "^1.1.0",
    "@types/node": "^18.11.18",
    "eslint": "^8.31.0",
    "husky": "4.3.8",
    "lerna": "^6.4.0",
    "nano-staged": "^0.8.0",
    "prettier": "^2.8.2",
    "tsatsiki": "^2.0.1",
    "typescript": "^4.9.4"
  }
}
